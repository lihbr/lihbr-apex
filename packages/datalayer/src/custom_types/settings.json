{
  "Main": {
    "site_title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Site title",
        "placeholder": "Title of the site"
      }
    },
    "title_format": {
      "type": "Text",
      "config": {
        "label": "Title format",
        "placeholder": "Use %site% and %page% to append respective titles"
      }
    },
    "site_description": {
      "type": "Text",
      "config": {
        "label": "Site description",
        "placeholder": "Fallback to default one if empty (max. 155 characters)"
      }
    },
    "site_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1200,
          "height": 630
        },
        "thumbnails": [
          {
            "name": "twitter_variant",
            "width": 1200,
            "height": 630
          }
        ],
        "label": "Site image"
      }
    },
    "site_language": {
      "type": "Select",
      "config": {
        "options": ["en", "fr"],
        "default_value": "en",
        "label": "Site language"
      }
    },
    "site_twitter_handle": {
      "type": "Text",
      "config": {
        "label": "Site Twitter handle (without @)"
      }
    },
    "site_main_author": {
      "type": "Text",
      "config": {
        "label": "Site main author"
      }
    },
    "site_background_color": {
      "type": "Color",
      "config": {
        "label": "Site background color"
      }
    },
    "site_accent_color": {
      "type": "Color",
      "config": {
        "label": "Site accent color"
      }
    }
  },
  "Blog": {
    "blog_recent_posts_section_title": {
      "type": "Text",
      "config": {
        "label": "Featured blog posts section title",
        "placeholder": "Recent posts"
      }
    },
    "blog_slices": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "featured_art": []
        },
        "choices": {
          "common_hero": {
            "type": "Slice",
            "fieldset": "Common Hero",
            "description": "Common Hero for pages",
            "icon": "chrome_reader_mode",
            "display": "list",
            "non-repeat": {
              "title_first_half": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Title first half",
                  "placeholder": "This is a"
                }
              },
              "title_second_half": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Title second half",
                  "placeholder": "Cool title"
                }
              },
              "text": {
                "type": "StructuredText",
                "config": {
                  "single": "strong, em, hyperlink",
                  "allowTargetBlank": true,
                  "label": "Lead text"
                }
              },
              "fullscreen": {
                "type": "Boolean",
                "config": {
                  "placeholder_false": "False",
                  "placeholder_true": "True",
                  "default_value": false,
                  "label": "Display full screen"
                }
              },
              "centered": {
                "type": "Boolean",
                "config": {
                  "placeholder_false": "False",
                  "placeholder_true": "True",
                  "default_value": false,
                  "label": "Display centered"
                }
              }
            },
            "repeat": {}
          },
          "page_content": {
            "type": "Slice",
            "fieldset": "Page Content",
            "description": "Tell the page builder where to display current page content",
            "icon": "widgets",
            "display": "list",
            "non-repeat": {},
            "repeat": {}
          },
          "recent_blog_posts": {
            "type": "Slice",
            "fieldset": "Recent Blog Posts",
            "description": "Display a list of the latest blog posts",
            "icon": "view_list",
            "display": "list",
            "non-repeat": {
              "amount_to_display": {
                "type": "Number",
                "config": {
                  "label": "Amount to display",
                  "placeholder": "3 (default)"
                }
              }
            },
            "repeat": {}
          },
          "art-banner": {
            "type": "Slice",
            "fieldset": "Art Banner",
            "description": "Display a random art or a picked one",
            "icon": "burst_mode",
            "display": "list",
            "non-repeat": {
              "featured_art": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "customtypes": ["post__art"],
                  "label": "featured_art",
                  "placeholder": "Leave empty to have a random one"
                }
              }
            },
            "repeat": {}
          },
          "text_emphasis": {
            "type": "Slice",
            "fieldset": "Text Emphasis",
            "description": "An emphasized text section",
            "icon": "subtitles",
            "display": "list",
            "non-repeat": {
              "main": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, heading2, heading3, strong, em, hyperlink, image, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Main part"
                }
              },
              "sub": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, heading2, heading3, strong, em, hyperlink, image, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Sub part"
                }
              }
            },
            "repeat": {}
          },
          "link_emphasis": {
            "type": "Slice",
            "fieldset": "Link Emphasis",
            "description": "An emphasized link section",
            "icon": "insert_link",
            "display": "list",
            "non-repeat": {
              "link": {
                "type": "Link",
                "config": {
                  "label": "Link"
                }
              },
              "title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Title",
                  "placeholder": "A cool title"
                }
              },
              "description": {
                "type": "Text",
                "config": {
                  "label": "Description"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "Art": {
    "art_partial_cta_text": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph, strong, em, hyperlink",
        "allowTargetBlank": true,
        "label": "Art partial CTA text"
      }
    },
    "art_partial_cta_label": {
      "type": "Text",
      "config": {
        "label": "Art partial CTA label"
      }
    }
  },
  "Header": {
    "header_links": {
      "type": "Group",
      "config": {
        "fields": {
          "link": {
            "type": "Link",
            "config": {
              "allowTargetBlank": true,
              "label": "Link"
            }
          },
          "title": {
            "type": "Text",
            "config": {
              "label": "Title"
            }
          }
        },
        "label": "Header links"
      }
    }
  },
  "Footer": {
    "footer_main_text": {
      "type": "StructuredText",
      "config": {
        "single": "strong, em, hyperlink",
        "allowTargetBlank": true,
        "label": "Footer main text"
      }
    },
    "footer_links": {
      "type": "Group",
      "config": {
        "fields": {
          "link": {
            "type": "Link",
            "config": {
              "allowTargetBlank": true,
              "label": "Link"
            }
          },
          "title": {
            "type": "Text",
            "config": {
              "label": "Title"
            }
          }
        },
        "label": "Footer links"
      }
    },
    "footer_footnote_link": {
      "type": "Link",
      "config": {
        "label": "Footnote link"
      }
    },
    "footer_footnote_link_title": {
      "type": "Text",
      "config": {
        "label": "Footnote link title"
      }
    }
  },
  "Social": {
    "socials": {
      "type": "Group",
      "config": {
        "fields": {
          "type": {
            "type": "Select",
            "config": {
              "options": [
                "Twitter",
                "Facebook",
                "Instagram",
                "LinkedIn",
                "GitHub",
                "Email",
                "Link"
              ],
              "default_value": "Twitter",
              "label": "Type"
            }
          },
          "link": {
            "type": "Link",
            "config": {
              "allowTargetBlank": true,
              "label": "Social link"
            }
          },
          "description": {
            "type": "Text",
            "config": {
              "label": "Short description"
            }
          }
        },
        "label": "Socials"
      }
    }
  }
}
