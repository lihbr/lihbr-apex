{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title",
        "placeholder": "Title of the art"
      }
    },
    "published_date": {
      "type": "Date",
      "config": {
        "label": "Published date"
      }
    },
    "type": {
      "type": "Select",
      "config": {
        "options": ["Art", "Photograph", "Painting", "Music video"],
        "default_value": "Art",
        "label": "Type"
      }
    },
    "picture": {
      "type": "Image",
      "config": {
        "constraint": {},
        "thumbnails": [],
        "label": "Picture"
      }
    },
    "background_color": {
      "type": "Color",
      "config": {
        "label": "Background color"
      }
    }
  },
  "Credit": {
    "credit_artist_name": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Artist name",
        "placeholder": "Reol"
      }
    },
    "credit_artist_link": {
      "type": "Link",
      "config": {
        "allowTargetBlank": true,
        "label": "Artist link",
        "placeholder": "Link to the artist"
      }
    },
    "credit_submitter_name": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Name",
        "placeholder": "@ChildishPaolo"
      }
    },
    "credit_submitter_link": {
      "type": "Link",
      "config": {
        "allowTargetBlank": true,
        "label": "Submitter link",
        "placeholder": "Link to the submitter"
      }
    }
  },
  "Fitting": {
    "fitting_object_fit": {
      "type": "Select",
      "config": {
        "options": ["Contain", "Cover"],
        "default_value": "Contain",
        "label": "Object fit"
      }
    },
    "fitting_object_position": {
      "type": "Select",
      "config": {
        "options": [
          "Center",
          "Top-left",
          "Top-center",
          "Top-right",
          "Center-left",
          "Center-right",
          "Bottom-left",
          "Bottom-center",
          "Bottom-right"
        ],
        "default_value": "Center",
        "label": "Object position"
      }
    }
  }
}
