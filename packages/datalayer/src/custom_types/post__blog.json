{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title",
        "placeholder": "Title goes here..."
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "Slug (uid)",
        "placeholder": "Just copy / paste title here"
      }
    },
    "published_date": {
      "type": "Date",
      "config": {
        "label": "Published date"
      }
    },
    "categories": {
      "type": "Group",
      "config": {
        "fields": {
          "category": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["taxonomy__category"],
              "label": "Category"
            }
          }
        },
        "label": "Categories"
      }
    },
    "thumbnail": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 600,
          "height": 600
        },
        "thumbnails": [],
        "label": "Thumbnail"
      }
    },
    "color": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["taxonomy__color"],
        "label": "Color"
      }
    },
    "lead": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph",
        "label": "Lead",
        "placeholder": "Post leading paragraph..."
      }
    },
    "body": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, preformatted, heading2, heading3, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
        "allowTargetBlank": true,
        "label": "Body",
        "placeholder": "Post body"
      }
    }
  },
  "Meta": {
    "meta_title": {
      "type": "Text",
      "config": {
        "label": "Title",
        "placeholder": "Fallback to default one if empty (max. 50 characters)"
      }
    },
    "meta_description": {
      "type": "Text",
      "config": {
        "label": "Description",
        "placeholder": "Fallback to default one if empty (max. 155 characters)"
      }
    },
    "meta_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1200,
          "height": 630
        },
        "thumbnails": [
          {
            "name": "twitter_variant",
            "width": 1200,
            "height": 630
          }
        ],
        "label": "Image"
      }
    }
  }
}
