{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title",
        "placeholder": "Title goes here..."
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "Slug (uid)",
        "placeholder": "Just copy / paste title here"
      }
    },
    "slices": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "text_emphasis": [],
          "link_emphasis": []
        },
        "choices": {
          "common_hero": {
            "type": "Slice",
            "fieldset": "Common Hero",
            "description": "Common Hero for pages",
            "icon": "chrome_reader_mode",
            "display": "list",
            "non-repeat": {
              "title_first_half": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Title first half",
                  "placeholder": "This is a"
                }
              },
              "title_second_half": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Title second half",
                  "placeholder": "Cool title"
                }
              },
              "text": {
                "type": "StructuredText",
                "config": {
                  "single": "strong, em, hyperlink",
                  "allowTargetBlank": true,
                  "label": "Lead text"
                }
              },
              "fullscreen": {
                "type": "Boolean",
                "config": {
                  "placeholder_false": "False",
                  "placeholder_true": "True",
                  "default_value": false,
                  "label": "Display full screen"
                }
              },
              "centered": {
                "type": "Boolean",
                "config": {
                  "placeholder_false": "False",
                  "placeholder_true": "True",
                  "default_value": false,
                  "label": "Display centered"
                }
              }
            },
            "repeat": {}
          },
          "page_content": {
            "type": "Slice",
            "fieldset": "Page Content",
            "description": "Tell the page builder where to display current page content",
            "icon": "widgets",
            "display": "list",
            "non-repeat": {},
            "repeat": {}
          },
          "recent_blog_posts": {
            "type": "Slice",
            "fieldset": "Recent Blog Posts",
            "description": "Display a list of the latest blog posts",
            "icon": "view_list",
            "display": "list",
            "non-repeat": {
              "amount_to_display": {
                "type": "Number",
                "config": {
                  "label": "Amount to display",
                  "placeholder": "3 (default)"
                }
              }
            },
            "repeat": {}
          },
          "art": {
            "type": "Slice",
            "fieldset": "Art",
            "description": "Display a random art or a picked one",
            "icon": "burst_mode",
            "display": "list",
            "non-repeat": {
              "featured_art": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "customtypes": ["post__art"],
                  "label": "featured_art",
                  "placeholder": "Leave empty to have a random one"
                }
              }
            },
            "repeat": {}
          },
          "text_emphasis": {
            "type": "Slice",
            "fieldset": "Text Emphasis",
            "description": "An emphasized text section",
            "icon": "subtitles",
            "display": "list",
            "non-repeat": {
              "main": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, heading2, heading3, strong, em, hyperlink, image, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Main part"
                }
              },
              "sub": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, heading2, heading3, strong, em, hyperlink, image, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Sub part"
                }
              }
            },
            "repeat": {}
          },
          "link_emphasis": {
            "type": "Slice",
            "fieldset": "Link Emphasis",
            "description": "An emphasized link section",
            "icon": "insert_link",
            "display": "list",
            "non-repeat": {
              "link": {
                "type": "Link",
                "config": {
                  "label": "Link"
                }
              },
              "title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Title",
                  "placeholder": "A cool title"
                }
              },
              "description": {
                "type": "Text",
                "config": {
                  "label": "Description"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "Meta": {
    "meta_title": {
      "type": "Text",
      "config": {
        "label": "Title",
        "placeholder": "Fallback to default one if empty (max. 50 characters)"
      }
    },
    "meta_description": {
      "type": "Text",
      "config": {
        "label": "Description",
        "placeholder": "Fallback to default one if empty (max. 155 characters)"
      }
    },
    "meta_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1200,
          "height": 630
        },
        "thumbnails": [
          {
            "name": "twitter_variant",
            "width": 1200,
            "height": 630
          }
        ],
        "label": "Image"
      }
    }
  }
}
