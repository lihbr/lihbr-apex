{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"types": ["node"],
		"strict": true,
		"declaration": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "dist", "examples"]
}
