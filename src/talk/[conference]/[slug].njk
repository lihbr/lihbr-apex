---javascript
{
	layout: "page",
	tags: "talks",
	pagination: {
		data: "talks",
		size: 1,
		resolve: "values",
		alias: "talk",
		addAllPagesToCollections: true,
	},
	permalink: {
		build: "talks/{{ talk.conference.slug }}/{{ talk.slug }}.html",
		preview: "/preview/talks/:conference/:slug",
	},
}
---

{%- from "../../_includes/system.njk" import display, partials, layouts, sections with context -%}

<figure id="referred" class="marquee hidden" data-text="Thanks for joining my talk!" data-confetti="{{ talk.confetti }}"><span class="sr-only">Thanks for joining my talk!</span></figure>

<header class="section space-y-6">
	{{ display("heading", { as: "h1", class: "heading-1", text: talk.title }) }}
	<p>{{ talk.lead }}</p>

	<dl class="dl">
		<div>
			<dt>Time</dt>
			<dd><time datetime="{{ talk.date }}">{%- asDate talk.date, "MM/DD/YYYY" -%}</time></dd>
		</div>
		<div>
			<dt>Duration</dt>
			<dd>{{ talk.durationMinutes }}-minute</dd>
		</div>
		<div>
			<dt>Conference</dt>
			<dd><a href="{{ talk.conference.url | url }}" class="underline" target="_blank" rel="noopener noreferrer">{{ talk.conference.name }}</a></dd>
		</div>
	</dl>
</header>

<section class="section space-y-6">
	{{ display("heading", { as: "h2", class: "heading-2", text: "Resources" }) }}
	<ul role="list" class="list-disc list-inside">
		{%- for link in talk.links -%}
		<li>
			<a href="{{ link.url | url }}" class="lowercase underline" target="_blank" rel="noopener noreferrer">
				{{ link.name }}
			</a>
		</li>
		{%- endfor -%}
	</ul>
</section>

<section class="section space-y-6">
	{{ display("heading", { as: "h2", class: "heading-2", text: "Any feedback? Drop me a line~" }) }}
	<form id="feedback" class="form space-y-2" action="https://twitter.com/intent/tweet" method="GET" target="_blank" rel="noopener noreferrer">
		<input type="hidden" name="hashtags" value="{{ talk.feedback.hashtag }}">
		<input type="hidden" name="related" value="{{ talk.feedback.related }}">
		<input type="hidden" name="via" value="{{ talk.feedback.via }}">
		<textarea name="text" rows="3" class="" placeholder="Thanks for the talk!" minlength="7" maxlength="260" required aria-label="Your feedback"></textarea>
		<button type="submit" class="lowercase"><span class="underline">Send</span> -></button>
	</form>
</section>

{%- layoutBlock "script" -%}
	{%- script "/assets/js/talks_conference_slug.ts" -%}
{%- endlayoutBlock -%}
