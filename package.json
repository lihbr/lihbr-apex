{
  "name": "lihbr-apex",
  "description": "lihbr.com source code",
  "private": true,
  "author": "Lucie Haberer <hello@lihbr.com> (https://lihbr.com)",
  "license": "MIT",
  "scripts": {
    "code": "code lihbr-apex.code-workspace",
    "dev": "nuxt packages/core",
    "predev:netlify": "shx rm -rf ./packages/core/.nuxt",
    "dev:netlify": "netlify dev",
    "generate": "nuxt generate packages/core",
    "generate:staging": "nuxt generate packages/core && cp packages/core/templates/noindex.robots.txt packages/core/dist/robots.txt",
    "build": "nuxt build packages/core",
    "start": "nuxt start packages/core",
    "lerna": "lerna",
    "lerna:version": "lerna version --no-push",
    "postlerna:version": "echo If everything is ok run `git push --follow-tags` then `yarn lerna:publish`",
    "lerna:publish": "lerna publish from-package",
    "postinstall": "lerna link",
    "lint": "eslint --ext .js,.ts,.vue ."
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/lihbr/lihbr-apex.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-vue": "7.8.0",
    "husky": "4.3.8",
    "lerna": "4.0.0",
    "prettier": "2.2.1"
  }
}
